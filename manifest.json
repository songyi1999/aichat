{
  "manifest_version": 3,
  "name": "AI Chat Extension",
  "version": "1.0",
  "description": "An AI-powered chat extension",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_title": "AI Chat"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
      
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "lib/marked.esm.js",
        "lib/highlight.min.js",
        "lib/github.min.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
